@model List<EventViewModel>

<div class="text-center">
    <h1 class="display-4">This is @ViewData["Title"]</h1>

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Address</th>
                    <th>Assigned User</th>
                    <th>Capacity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in Model)
                {
                    <tr>
                        <td>@ev.Name</td>
                        <td>@ev.Description</td>
                        <td>@ev.Date.ToString("dd/MM/yyyy")</td>
                        <td>@ev.Address</td>
                        <td>@ev.AssignedUser</td>
                        <td>@ev.Capacity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
